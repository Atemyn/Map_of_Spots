<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_spot_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:src="@drawable/no_image_item"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/black"/>

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/civ_spot_item"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/tv_name_spot_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_spot_item"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_adding_date_spot_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spot_adding_date"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            android:padding="5dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>